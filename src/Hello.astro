---
// Write your component code in this file!
type Props = {
	message: string;
};

const { message } = Astro.props;
---
<div class="hello">Hello There {message}!</div>

<style>
	.hello {		
		background-image: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 150%;
    background-position: 0%;
		color: white;
		font-size: 36px;		
		font-weight: bold;
	}
</style>